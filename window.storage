const storage = {
  async set(key, value) {
    try {
      localStorage.setItem(key, value);
    } catch (error) {
      console.log('LocalStorage set:', key, value);
    }
  },
  async get(key) {
    try {
      const value = localStorage.getItem(key);
      return value ? { value } : null;
    } catch (error) {
      console.log('LocalStorage get:', key);
      return null;
    }
  }
};

